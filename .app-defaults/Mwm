!
! Mwm.ad
!
! vim:ft=xdefaults:
!

#include "Mwm-clients.ad"
#include "Mwm-colors.ad"
#include "Mwm-fonts.ad"

Mwm.*.enableEtchedInMenu:	True
Mwm.*.shadowThickness:		1
Mwm.*.highlightThickness:	1

! Pop-up menus
! MWM has problems animating menus
Mwm.*.XmMenuShell.animate:	False


! General Appearance and Behavior Resources
Mwm.*.showFeedback:		behavior kill move placement resize restart quit


! Screen Specific Resources
! True: XmStringDrawImage()/XDrawImageString(),
! False: XmStringDraw()/XDrawString().
Mwm.*.cleanText:		False
Mwm.*.moveOpaque:		True
!Mwm.*.iconDecoration:		activeLabel label image
Mwm.*.iconDecoration:		activeLabel image

Mwm.*.iconPlacement:		top left tight
Mwm.*.rootButtonClick:		True
Mwm.*.multiScreen:		True

! `tear_off_enabled` makes MWM behave unpredictably and hang.
Mwm.*.tearOffModel:		tear_off_disabled

Mwm.*.useIconBox:		False
Mwm.*.frameStyle:		slab
