!
! Mwm.ad
!
! vim:ft=xdefaults:
!

Mwm.*.enableEtchedInMenu: True
Mwm.*.shadowThickness: 1
Mwm.*.highlightThickness: 1

Mwm.*.highlightColor: #4b6983
Mwm.*.background: #dcdad5
Mwm.*.foreground: #000000
Mwm.*.activeBackground: #4b6983
Mwm.*.activeForeground: #ffffff

! Pop-up menus
! MWM has problems animating menus
Mwm.*.XmMenuShell.animate: False

! Pop-up menu items
! This affects neither root menu nor window menus
!Mwm.*.XmMenuShell.XmRowColumn.XmPushButton.armColor:		#4b6983
!Mwm.*.XmMenuShell.XmRowColumn.XmPuchButtonGadget.armColor:		#4b6983
Mwm.*.XmMenuShell.*.armColor:	#4b6983

! XmFontList (see AppearanceData in WmGlobal.h)
! No colon-terminated (-*:) values are accepted
Mwm.*.fontList: -microsoft-tahoma-medium-r-normal--*-90-96-96-p-*-iso8859-5
! Render tables affect MWM menus and dialogs
! (overriding `fontList` and allowing UTF-8 labels),
! but not window or icon titles
Mwm.*.renderTable: Tahoma

! If `fontType` is set to `FONT_IS_FONTSET`, the trailing colon is accepted but no longer necessary
Mwm.*.renderTable.Arial.fontName: -monotype-arial-medium-r-normal--*-90-96-96-p-*-*-*
Mwm.*.renderTable.Arial.fontType: FONT_IS_FONTSET

Mwm.*.renderTable.Tahoma.fontName: -microsoft-tahoma-medium-r-normal--*-90-96-96-p-*-*-*
Mwm.*.renderTable.Tahoma.fontType: FONT_IS_FONTSET

Mwm.*.renderTable.ArialXft.fontName: Arial
Mwm.*.renderTable.ArialXft.fontSize: 9
Mwm.*.renderTable.ArialXft.fontType: FONT_IS_XFT

Mwm.*.renderTable.TahomaXft.fontName: Tahoma
Mwm.*.renderTable.TahomaXft.fontSize: 9
Mwm.*.renderTable.TahomeXft.fontType: FONT_IS_XFT

Mwm.*.renderTable.Liberation_Sans.fontName: Liberation Sans
Mwm.*.renderTable.Liberation_Sans.fontSize: 9
Mwm.*.renderTable.Liberation_Sans.fontType: FONT_IS_XFT

Mwm.*.renderTable.Segoe_UI.fontName: Segoe UI
Mwm.*.renderTable.Segoe_UI.fontSize: 9
Mwm.*.renderTable.Segoe_UI.fontType: FONT_IS_XFT


! General Appearance and Behavior Resources
Mwm.*.showFeedback: behavior kill move placement resize restart quit


! Screen Specific Resources
! True: XmStringDrawImage()/XDrawImageString(),
! False: XmStringDraw()/XDrawString().
Mwm.*.cleanText: False
Mwm.*.moveOpaque: True
!Mwm.*.iconDecoration: activeLabel label image
Mwm.*.iconDecoration: activeLabel image


! Root and Window menus
! Overall background, incl. title, border, and pressed cascade buttons (slightly darker)
Mwm*menu*foreground: White
Mwm*menu*background: #4b6983
Mwm*menu*XmSeparatorGadget.foreground: Black
Mwm*menu*XmSeparatorGadget.background: #dcdad5
Mwm*menu*XmPushButtonGadget.foreground: Black
Mwm*menu*XmPushButtonGadget.background: #dcdad5
Mwm*menu*XmCascadeButtonGadget.foreground: Black
Mwm*menu*XmCascadeButtonGadget.background: #dcdad5
! Icon border and background
!Mwm*icon*background: Green
! Inactive window border and title
!Mwm*client*background: Yellow
! Inactive window title
!Mwm*client*title*background: Lavender
! Window size and position, and Restart/Quit dialogs
!Mwm*feedback*background: Red
